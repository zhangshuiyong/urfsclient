{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "urfsclient",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http":{
        "all": true,
        "request": true,
        "scope": ["https://*", "http://*"]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "scope": ["$APPDATA/*","$APPCACHE/*"],
        "readFile": true,
        "writeFile": true,
        "removeFile": true,
        "createDir": true,
        "readDir": true,
        "removeDir": true,
        "exists": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true,
        "message": true,
        "open": true, 
        "save": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "org.openi.urchinclient",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "urfsclient",
        "fileDropEnabled": false,
        "width": 1200,
        "height": 700
      }
    ]
  }
}
